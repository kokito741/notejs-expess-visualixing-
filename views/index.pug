doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Device Monitoring
    style.
      body { font-family: Arial, sans-serif; }
      table { width: 100%; border-collapse: collapse; }
      th, td { padding: 8px 12px; border: 1px solid #ddd; }
      th { background-color: #f4f4f4; }
      .point { width: 10px; height: 10px; background-color: #4CAF50; border-radius: 50%; position: absolute; }
      .line { height: 2px; background-color: #4CAF50; position: absolute; }
      .chart-container { position: relative; height: 200px; }
      .chart-label { position: absolute; left: 0; }
  body
    h1 Device Monitoring
    div
      h2 Current Data
      p
        strong Temperature:
        span#current-temperature 
        |  Â°C
      p
        strong Humidity:
        span#current-humidity 
        |  %
      p
        strong Last Updated:
        span#last-updated
    div#data-container
    div
      h2 Temperature Histogram
      input(type="date" id="temp-start-date")
      input(type="date" id="temp-end-date")
      button(onclick="applyTempRange()") Apply Range
      div#temp-histogram.chart-container
    div
      h2 Humidity Histogram
      input(type="date" id="humidity-start-date")
      input(type="date" id="humidity-end-date")
      button(onclick="applyHumidityRange()") Apply Range
      div#humidity-histogram.chart-container
    script(src="/script.js")