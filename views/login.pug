doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Login
    style.
      body { font-family: Arial, sans-serif; }
      form { max-width: 300px; margin: auto; padding: 1em; border: 1px solid #ccc; border-radius: 1em; }
      div + div { margin-top: 1em; }
      label { display: block; }
      input { width: 100%; padding: 0.5em; }
      button { padding: 0.7em; color: #fff; background-color: #007BFF; border: none; border-radius: 0.3em; cursor: pointer; }
  body
    h1 Login
    form(action="/login" method="post")
      div
        label(for="email") Email
        input(type="email" id="email" name="email" required)
      div
        label(for="password") Password
        input(type="password" id="password" name="password" required)
      div
        button(type="submit")